{% extends 'base.html.twig' %}

{% block title %}Formation index{% endblock %}

{% block body %}
    <h1>Formation index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Dated</th>
                <th>Datef</th>
                <th>Lieu</th>
                <th>Nom</th>
                <th>Description</th>
                <th>Type</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for formation in formations %}
            <tr>
                <td>{{ formation.id }}</td>
                <td>{{ formation.dated ? formation.dated|date('Y-m-d') : '' }}</td>
                <td>{{ formation.datef ? formation.datef|date('Y-m-d') : '' }}</td>
                <td>{{ formation.lieu }}</td>
                <td>{{ formation.nom }}</td>
                <td>{{ formation.description }}</td>
                <td>{{ formation.type }}</td>
                <td>
                    <a href="{{ path('formation_show', {'id': formation.id}) }}">show</a>
                    <a href="{{ path('formation_edit', {'id': formation.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('formation_new') }}">Create new</a>
{% endblock %}
